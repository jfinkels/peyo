<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <import resource="profile.xml" />

  <bean id="crossoverFunction" class="jmona.ga.impl.TwoPointCrossoverFunction" />
  <bean id="fitnessFunction" class="peyo.ProteinFitnessFunction">
    <constructor-arg value="1000000" />
    <property name="hiddenMarkovModel" ref="profile" />
  </bean>
  
  <bean id="residueMutationFunction" class="peyo.ResidueMutationFunction" />
  
  <bean id="mutationFunction"
    class="jmona.impl.mutation.VariableDistributionMutationFunction">
    <property name="distribution">
      <bean factory-bean="distributionFactory"
        factory-method="createObject" />
    </property>
    <property name="elementMutationFunction" ref="residueMutationFunction" />
  </bean>
  <bean id="selectionFunction" class="jmona.impl.selection.FitnessProportionateSelection" />

</beans>